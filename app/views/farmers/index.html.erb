<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script> 

<html>
    <body>
        <center><u><h1>Details of Farmers</h1></u></center>
        <table class="table ">
            <tr> 
                <th scope="col">Farmer ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name </th>
                <th scope="col">Mobile Number</th>
                <th scope="col">Email ID</th>
                <th scope="col">Line 1</th>
                <th scope="col">Line 2</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">Country</th>
                <th scope="col">Edit Details</th>
                
            </tr>
            <% @farmer_details.each do |details|%>
            <tr>
                <td scope="row"><%= details.id%></td>
                <td scope="row"><%= details.first_name %></td>
                <td scope="row"><%= details.last_name%></td> 
                <td scope="row"><%= details.mobile_number%>
                <td scope="row"><%= details.email%></td>
                <td scope="row"><%= details.address.line_1%></td>
                <td scope="row"><%= details.address.line_2%></td>
                <td scope="row"><%= details.address.city%></td>
                <td scope="row"><%= details.address.state%></td>
                <td scope="row"><%= details.address.country%></td>
                <td scope="row"><%= link_to 'Edit Details', edit_farmer_path(details.id) %></td>


            </tr>
            <% end%>
        </table>


        <p><%= link_to "Enlist Detail",new_farmer_instrument_path()%></p>
 
        <p><%= link_to "Add Farmer", new_farmer_path()%></p>


    </body>
</html>